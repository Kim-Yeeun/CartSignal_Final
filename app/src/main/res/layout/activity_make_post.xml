<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePostActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/companyimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/companyimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="쿠팡" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/companyimage"
        android:layout_toLeftOf="@id/button"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="마켓컬리" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/companyimage"
        android:layout_toLeftOf="@id/button2"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="롯데마트" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/companyimage"
        android:layout_toRightOf="@id/button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="쓱배송" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/companyimage"
        android:layout_toRightOf="@id/button4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="기타" />

    <EditText
        android:id="@+id/minMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="최소 배송 금액"
        android:inputType="text" />

    <EditText
        android:id="@+id/maxUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minMoney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="최대 희망 인원"
        android:inputType="text" />

    <EditText
        android:id="@+id/moreInfo"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_below="@id/maxUser"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/imagestyle"
        android:hint="  추가 정보를 입력하세요"
        android:inputType="text"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/moreInfo"
        android:layout_marginTop="10dp"
        android:hint="마감 날짜"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/endDate"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:textColor="#ff8787"
        android:text="작성 완료" />


</RelativeLayout>